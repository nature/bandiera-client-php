{
    "name": "nature/bandiera-client-php",
    "description": "Bandiera is a simple, stand-alone feature flagging service that is not tied to any existing web framework or language. This is a client for talking to the web service."
    "type": "library",
    "keywords": ["feature", "flag", "feature flagging", "feature toggle"],
    "homepage": "https://github.com/nature/bandiera",
    "license": "MIT",
    "authors": [
        {
            "name": "Romulo De Lazzari",
            "email": "r.delazzari@nature.com",
            "homepage": "http://www.nature.com"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "guzzlehttp/guzzle": "~6.0"
    },
    "require-dev": {
        "phpspec/phpspec": "~2.0"
    },
    "config": {
        "bin-dir": "bin"
    },
    "autoload": {
        "psr-4": {
            "Nature\\Bandiera\\": "src/"
        }
    }
}
